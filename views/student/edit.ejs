<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/edit" method="POST" enctype="multipart/form-data">
                <div class="heading-2 text-center mt-3">EDIT YOUR PROFILE</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label class="required" for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter name" name="name"
                        value="<%= typeof name != 'undefined' ? name : '' %>">
                </div>
                <div class="form-group" style="display: none;">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email" placeholder="Enter email" name="email"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
                </div>
                <div class="form-group">
                    <label class="required" for="contactNum">Contact Number</label>
                    <input type="text" class="form-control" id="contactNum" placeholder="Enter contact number" name="contactNum"
                        value="<%= typeof contactNum != 'undefined' ? contactNum : '' %>">
                </div>
                <div class="form-group">
                    <label class="required" for="dob">Date Of Birth</label>
                    <input type="text" class="form-control" id="dob" name="dob" autocomplete="bday"
                        placeholder="Date of Birth">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" autocomplete="off" class="form-control" id="password" placeholder="Enter password"
                        name="password1">
                    <input type="password" autocomplete="off" class="form-control mt-3" id="password" placeholder="Confirm password"
                        name="password2">
                </div>
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Save</button>
            </form>
        </div>
    </div>
</div>

<% include ../layouts/footer %>

<script src="/scripts/dob.js"></script>
